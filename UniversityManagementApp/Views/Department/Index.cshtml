
@{
    ViewBag.Title = "Index";
}

    <form id="departMentSaveForm" method="POST">
        <fieldset>
            <legend>Save Department</legend>
            <table>
                <tr>
                    <td>Code</td>
                    <td><input id="codeTextBox" type="text" name="codeTextBox" /></td>
                </tr>
                <tr>
                    <td>Name</td>
                    <td><input id="nameTextBox" type="text" name="nameTextBox" /></td>
                </tr>
                <tr>
                    <td></td>
                    <td align="right"><input id="saveButton" type="submit" value="Save" /></td>
                </tr>
            </table>
        </fieldset>
    </form>
  
    
    
 @section scripts
 {
     <script src="~/Scripts/jquery-2.2.0.js"></script>
     <script src="~/Scripts/jquery.validate.js"></script>
     <script>
         $(document).ready(function() {
             $("#departMentSaveForm").validate({
                 rules: {
                     codeTextBox: {
                         required: true,
                         minlength: 2,
                         maxlength: 7
                     },
                     nameTextBox: "required"
                 },
                 messages: {
                     codeTextBox: {
                         required: "Please enter a code",
                         minlength: "Your code must consist of at least 2 characters",
                         maxlength: "Your code must less than 8 characters"
                     },
                     nameTextBox: {
                         required: "Please add your department name"
                     },
                 }
             });
         });



      
















     </script>
 }
